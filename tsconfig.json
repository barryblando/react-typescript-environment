{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true, // allow
    "checkJs": false, // but don't check
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
  },
  "typeAcquisition": {
    "enable": true
  },
  "typeRoots": [
    "./typings.d.ts",
    "./node_modules/@types"
  ],
  "include": [
    "src",
    ".src/.ts",
    "src/**/*",
    "./typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "server",
    "dist"
  ]
}
